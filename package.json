{
  "name": "@angelitosystems/rapidfast",
  "version": "1.0.5",
  "description": "Framework para desarrollo r√°pido de APIs RESTful con TypeScript y Express",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rapidfast": "./dist/cli/bin/rapidfast.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "ts-node src/scripts/copy-templates.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "start": "node dist/index.js",
    "publish:npm": "npm publish --access=public --registry=https://registry.npmjs.org/",
    "publish:github": "npm config set //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN} && npm publish --registry=https://npm.pkg.github.com --scope=@angelitosystems",
    "publish:all": "npm run publish:npm",
    "publish:all:github": "npm run publish:npm && npm run publish:github",
    "bump": "node scripts/bump-version.js",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major"
  },
  "keywords": [
    "framework",
    "api",
    "rest",
    "typescript",
    "express",
    "decorators",
    "mvc",
    "rapidapi",
    "nodejs"
  ],
  "author": "Angelito Systems <info@angelito.systems>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angelitosystems/rapidfast.git"
  },
  "bugs": {
    "url": "https://github.com/angelitosystems/rapidfast/issues"
  },
  "homepage": "https://github.com/angelitosystems/rapidfast#readme",
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "cli-progress": "^3.12.0",
    "commander": "^9.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "figlet": "^1.6.0",
    "fs-extra": "^11.3.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^8.2.6",
    "log-symbols": "^4.1.0",
    "mongoose": "^7.5.0",
    "ora": "^5.4.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.0.0",
    "typeorm": "^0.3.20",
    "mongodb": "^6.3.0",
    "mysql2": "^3.9.1",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7",
    "knex": "^3.1.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "@types/pg": "^8.10.9",
    "@types/sqlite3": "^3.1.11"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "templates/**/*"
  ],
  "type": "commonjs",
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
