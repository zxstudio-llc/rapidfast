{
  "name": "@angelitosystems/rapidfast",
  "version": "1.0.0",
  "description": "Framework para desarrollo r√°pido de APIs RESTful con TypeScript y Express",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rapidfast": "dist/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "publish:npm": "npm publish --access=public",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com",
    "publish:all": "npm run bump && npm run publish:npm && npm run publish:github",
    "bump": "node scripts/bump-version.js",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major"
  },
  "keywords": [
    "framework",
    "api",
    "rest",
    "typescript",
    "express",
    "decorators",
    "mvc",
    "rapidapi",
    "nodejs"
  ],
